<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <!-- 图片高度代码自行设置-->
                <com.android.volley.ui.NetworkImageView
                    android:id="@+id/iv_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/icon_hos_bg"/>

                <TextView
                    android:id="@+id/tv_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:text="北京协和医院"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/textview_middle" />
                <!-- 这个控件不是太好用 星星间距不能调 要想调只有把背景里面的星星切图切大点-->
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="@dimen/theme_margin"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressDrawable="@drawable/bg_rating_yellow"
                    android:rating="1" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/theme_margin"
                android:paddingRight="@dimen/theme_margin"
                android:paddingTop="10dp"
                android:text="hahahahhah"
                android:textColor="@color/color333"
                android:textSize="@dimen/textview_min" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_divide" />

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_didian1" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iv_address_next"
                    android:layout_toRightOf="@+id/iv_address"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="东城区"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/textview_middle" />

                <ImageView
                    android:id="@+id/iv_address_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/theme_margin"
                    android:paddingRight="@dimen/theme_margin"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_divide" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tel"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/iv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/theme_margin"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_tel" />

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iv_tel_next"
                    android:layout_toRightOf="@+id/iv_tel"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="66666666"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/textview_middle" />

                <ImageView
                    android:id="@+id/iv_tel_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/theme_margin"
                    android:paddingRight="@dimen/theme_margin"
                    android:src="@drawable/icon_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_divide" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f0f0f0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divide" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/theme_padding"
                        android:textColor="@color/color333"
                        android:textSize="@dimen/textview_middle"
                        android:gravity="center_vertical"
                        android:text="专家介绍"/>
                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/theme_padding"
                        android:src="@drawable/icon_more"
                        android:paddingLeft="@dimen/theme_padding"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_doctor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <com.android.volley.ui.NetworkImageView
                            android:id="@+id/iv_avatar1"
                            android:layout_width="75dp"
                            android:layout_height="105dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/icon_avator"/>
                        <TextView
                            android:id="@+id/tv_doctor_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/textview_normal"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="李娜"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_doctor_subject1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#aba9a6"
                            android:textSize="@dimen/textview_normal"
                            android:text="妇产科"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_doctor_job1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#aba9a6"
                            android:textSize="@dimen/textview_normal"
                            android:text="主任医师"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_doctor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <com.android.volley.ui.NetworkImageView
                            android:id="@+id/iv_avatar2"
                            android:layout_width="75dp"
                            android:layout_height="105dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/icon_avator"/>
                        <TextView
                            android:id="@+id/tv_doctor_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/textview_normal"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="李娜"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_doctor_subject2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#aba9a6"
                            android:textSize="@dimen/textview_normal"
                            android:text="妇产科"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_doctor_job2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#aba9a6"
                            android:textSize="@dimen/textview_normal"
                            android:text="主任医师"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_doctor3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <com.android.volley.ui.NetworkImageView
                            android:id="@+id/iv_avatar3"
                            android:layout_width="75dp"
                            android:layout_height="105dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/icon_avator"/>
                        <TextView
                            android:id="@+id/tv_doctor_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/textview_normal"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="李娜"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_doctor_subject3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#aba9a6"
                            android:textSize="@dimen/textview_normal"
                            android:text="妇产科"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:id="@+id/tv_doctor_job3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#aba9a6"
                            android:textSize="@dimen/textview_normal"
                            android:text="主任医师"
                            android:gravity="center"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divide" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>