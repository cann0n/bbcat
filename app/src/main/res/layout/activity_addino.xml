<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_orange_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ino_topleft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="18dp"
            android:src="@drawable/icon_back_w"/>

        <TextView
            android:id="@+id/ino_topbettwen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/whiteringbg_sm"
            android:drawableLeft="@drawable/timeicon"
            android:gravity="center"
            android:paddingLeft="@dimen/theme_padding"
            android:paddingRight="@dimen/theme_padding"
            android:singleLine="true"
            android:textColor="@color/default_black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/ino_topright"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/whiteringbg_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="提交"
            android:textColor="@color/default_black"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selectorbackground_edit"
        android:addStatesFromChildren="true"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称： "
            android:textColor="#FF747474"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ino_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入名称信息"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textColorHint="#FFB5B5B5"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selectorbackground_edit"
        android:addStatesFromChildren="true"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="针次： "
            android:textColor="#FF747474"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ino_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入针次信息"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textColorHint="#FFB5B5B5"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
