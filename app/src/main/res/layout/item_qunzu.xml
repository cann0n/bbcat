<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <!-- 自行换为圆形imageview-->
       <ImageView
           android:id="@+id/iv_avatar"
           android:layout_width="55dp"
           android:layout_height="55dp"
           android:layout_centerVertical="true"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:src="@drawable/icon_default_image"
           />
        <RelativeLayout
            android:id="@+id/rl_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_avatar"
            android:paddingTop="@dimen/theme_margin">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_middle"
                android:textColor="@color/color333"
                android:layout_marginRight="10dp"
                android:text="宝妈俱乐部"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/textview_xxmin"
                android:text="哪些因素影响婴儿的成长"
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_marginRight="60dp"
                android:ellipsize="end"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_alignBottom="@+id/tv_name"
                android:background="@drawable/bg_num_item"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:text="99"
                android:textSize="@dimen/textview_xxmin"/>
        </RelativeLayout>
        <!-- 已加入background @drawable/bg_btn_yiguanzhu-->
        <TextView
            android:id="@+id/tv_jiaru"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textview_xmin"
            android:textColor="@color/color_green"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_btn_guanzhu"
            android:layout_marginRight="10dp"
            android:text="加入"/>
        <!-- 黑名单name-->
        <TextView
            android:id="@+id/tv_heimingdan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textview_middle"
            android:textColor="@color/color333"
            android:layout_marginRight="10dp"
            android:text="梦想爱情"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <!-- 额外的提示或者广告item-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_cat_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_green"
                android:textSize="@dimen/textview_xxmin"
                android:text="布布猫提示"/>
            <TextView
                android:id="@+id/tv_cat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_min"
                android:textColor="@color/color333"
                android:gravity="center"
                android:layout_marginRight="@dimen/theme_margin"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:text="11.30日就可以注射乙肝疫苗"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_divide"/>
    </RelativeLayout>
</LinearLayout>