<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical">
    <include layout="@layout/layout_title_bar"/>
    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开启提醒"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
        <ToggleButton
            android:id="@+id/tb_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>

    <View android:layout_width="fill_parent"
          android:layout_height="1px"
          android:background="#e9e9e9"/>
    <RelativeLayout
        android:id="@+id/rl_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="设置提醒时间"
            android:textColor="@color/color333"
            android:textColorHint="@color/color999"
            android:textSize="@dimen/font14"
            />
    </RelativeLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="1px"
          android:background="#e9e9e9"/>
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="right"
        android:paddingRight="60dp"
        android:text="确定"
        android:textColor="@color/btn_blue_pressed"
        android:textSize="@dimen/font14"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll_set_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:padding="10dp">
        <NumberPicker
            android:id="@+id/valuepicker"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <NumberPicker
            android:id="@+id/hourpicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="时"/>

        <NumberPicker
            android:id="@+id/minuteicker"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="分"/>
    </LinearLayout>
</LinearLayout>