<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffF0F0F0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ffE14D31">

        <ImageView
            android:id="@+id/pc_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/icon_back_w" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.sdkj.bbcat.widget.CircleImageView
                android:id="@+id/pc_head"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/em_default_image"
                app:border_color="@color/color_white"
                app:border_width="2dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/pc_unregisall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pc_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="登录"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"/>

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/color_white"/>

                    <TextView
                        android:id="@+id/pc_regis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="注册"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/pc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:visibility="gone"/>

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#33000000"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pc_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_pinglun"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pc_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_dianzan"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pc_fenxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_fenxiang"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#ffEAEAEA"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffF0F0F0"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/pc_jifenall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_jifen"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="积分"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/pc_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_gray"
                    android:textSize="22sp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#ffEAEAEA"/>

            <RelativeLayout
                android:id="@+id/pc_myfriendall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/myfriendicon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="我的好友"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/intoicon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>

            <RelativeLayout
                android:id="@+id/pc_friendmsgall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/ls_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_dongtaiicon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="好友动态"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/pc_friendmsg"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ls_id"
                    android:background="@drawable/numbg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="99+"
                    android:textColor="@color/color_white"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/intoicon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#ffEAEAEA"/>

            <RelativeLayout
                android:id="@+id/pc_zujiall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_zujiicon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="成长足迹"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/intoicon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>

            <RelativeLayout
                android:id="@+id/pc_ringall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_ringicon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="我的圈圈"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/intoicon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#ffEAEAEA"/>

            <RelativeLayout
                android:id="@+id/pc_personinfosall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/myfriendicon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="个人信息"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/intoicon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>

            <RelativeLayout
                android:id="@+id/pc_qitaall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/pc_qitaicon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="其他"
                    android:textColor="@color/default_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/intoicon"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffEAEAEA"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>