<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_orange_color">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_back_w" />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/theme_margin"
            android:paddingRight="10dp"
            android:src="@drawable/icon_add_status"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:id="@+id/tv_ring"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="身高"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font18"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_footprint"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="体重"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font18"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_head"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="头围"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font18"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <View
                android:id="@+id/bra_vwselectorone"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#ffffff"
                />

            <View
                android:id="@+id/bra_vwselectortwo"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:visibility="invisible"/>
            <View
                android:id="@+id/bra_vwselectorthree"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#ffffff"
                android:visibility="invisible"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="成长曲线"
        android:textColor="@color/color333"
        android:textSize="@dimen/font18"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/ll_chart"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" />
</LinearLayout>
