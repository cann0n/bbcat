<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/layout_title_bar"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:background="@color/color_white"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录"
                android:textColor="@color/color333"
                android:textSize="@dimen/font14"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/icon_tips"
                android:drawablePadding="8dp"
                android:text="哺乳"
                android:textColor="@color/color333"
                android:textSize="@dimen/font14"
                />
        </RelativeLayout>
        <View android:layout_width="fill_parent"
              android:layout_height="5px"
              android:background="#e9e9e9"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录日期"
                android:textColor="@color/color333"
                android:textSize="@dimen/font14"
                />
            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2012-12-06 12:40"
                android:textColor="@color/color333"
                android:textSize="@dimen/font14"
                />
        </RelativeLayout>
        
        <View android:layout_width="fill_parent"
              android:layout_height="5px"
              android:background="#e9e9e9"/>
        <LinearLayout
            android:id="@+id/rl_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计量"
                android:textColor="@color/color333"
                android:textSize="@dimen/font14"
                />
            <EditText
                android:id="@+id/et_num"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/tv_num"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入喂养计量(ml)"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#FF000000"
                android:textColorHint="#FFB5B5B5"
                android:textSize="@dimen/font14"/>
        </LinearLayout>
        <View android:layout_width="fill_parent"
              android:layout_height="5px"
              android:background="#e9e9e9"/>

        <RelativeLayout
            android:id="@+id/rl_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textColor="@color/color333"
                android:textSize="@dimen/font14"
                />
            <EditText
                android:id="@+id/et_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_desc"
                android:background="@null"
                android:hint="请输入喂养信息"
                android:minHeight="80dp"
                android:singleLine="true"
                android:textColor="#FF000000"
                android:textColorHint="#FFB5B5B5"
                android:textSize="@dimen/font14"/>
        </RelativeLayout>
        <View android:layout_width="fill_parent"
              android:layout_height="5px"
              android:background="#e9e9e9"/>
        <Chronometer
            android:id="@+id/ct_long"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/color333"
            android:textSize="@dimen/font16"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_jishi"/>
        <ImageView
            android:id="@+id/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_end_time"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/color333"
        android:textSize="@dimen/font18"
        />
</RelativeLayout>