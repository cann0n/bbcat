<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <include layout="@layout/layout_title_bar" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="5px"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记录"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
        <TextView
            android:id="@+id/ty_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="哺乳"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            android:drawableLeft="@drawable/icon_tips"
            android:drawablePadding="8dp"
            />
    </RelativeLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="5px"
          android:background="#e9e9e9"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
        <TextView
            android:id="@+id/ty_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2012-12-06 12:40"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
    </RelativeLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="5px"
          android:background="#e9e9e9"/>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时长"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="30分钟"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
    </RelativeLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="5px"
          android:background="#e9e9e9"/>

    <RelativeLayout
        android:id="@+id/rl_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述"
            android:textColor="@color/color333"
            android:textSize="@dimen/font14"
            />
        <EditText
            android:id="@+id/et_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入喂养信息"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textColorHint="#FFB5B5B5"
            android:textSize="@dimen/font14"
            android:layout_below="@id/tv_desc"
            android:minHeight="80dp"/>
    </RelativeLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="5px"
          android:background="#e9e9e9"/>
    <ImageView 
        android:id="@+id/iv_time"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_jishi"/>
    
    <ImageView 
        android:id="@+id/iv_input"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_shuru"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selectorbackground_edit"
        android:addStatesFromChildren="true"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <EditText
            android:id="@+id/afn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入喂养信息"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textColorHint="#FFB5B5B5"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="@color/color333"
        android:textSize="16sp" />

</LinearLayout>
