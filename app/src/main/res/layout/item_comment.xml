<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_item_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_default_image"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_green"
            android:textSize="@dimen/textview_min"
            android:paddingTop="2dp"
            android:layout_toRightOf="@+id/iv_item_avatar"
            android:layout_alignTop="@+id/iv_item_avatar"
            android:text="灯火阑珊"/>
        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/textview_xxmin"
            android:layout_below="@+id/tv_item_name"
            android:layout_alignLeft="@+id/tv_item_name"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="积极参加2娃活动"/>

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_item_name"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/textview_xmin"
            android:text="8分钟前"
            android:layout_marginRight="@dimen/theme_margin"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_divide" />
    </RelativeLayout>
</LinearLayout>