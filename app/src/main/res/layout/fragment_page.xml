<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/theme_orange_color">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_info"
            android:paddingLeft="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_home_title"
            android:layout_centerInParent="true"
            android:text=""
            />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_banner"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/tv_foot_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_zuji"
                    android:gravity="center_horizontal"
                    android:text="成长足迹"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/tv_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_yuer"
                    android:gravity="center_horizontal"
                    android:text="育儿知识"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/tv_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_yiliao"
                    android:gravity="center_horizontal"
                    android:text="医疗在线"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/tv_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_quanquan"
                    android:gravity="center_horizontal"
                    android:text="我的圈圈"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/font14"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>

            <TextView
                android:id="@+id/tv_recommend_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_home_logo"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:padding="10dp"
                android:text="推荐"
                android:textColor="@color/color999"
                android:textSize="@dimen/font16"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color999"/>

            <LinearLayout
                android:id="@+id/ll_recommend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>

            <TextView
                android:id="@+id/tv_diary_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:padding="10dp"
                android:text="宝宝日记"
                android:textColor="@color/color999"
                android:textSize="@dimen/font16"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color999"/>

            <LinearLayout
                android:id="@+id/ll_diary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>

            <TextView
                android:id="@+id/tv_doctor_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:padding="10dp"
                android:text="医疗在线"
                android:textColor="@color/color999"
                android:textSize="@dimen/font16"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color999"/>

            <LinearLayout
                android:id="@+id/ll_doctor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>

            <TextView
                android:id="@+id/tv_knowledge_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:padding="10dp"
                android:text="育儿知识"
                android:textColor="@color/color999"
                android:textSize="@dimen/font16"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color999"/>

            <LinearLayout
                android:id="@+id/ll_knowledge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>

            <TextView
                android:id="@+id/tv_my_circle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:padding="10dp"
                android:text="我的圈圈"
                android:textColor="@color/color999"
                android:textSize="@dimen/font16"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color999"/>

            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>

            <TextView
                android:id="@+id/tv_guess"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_more"
                android:padding="10dp"
                android:text="猜你喜欢"
                android:textColor="@color/color999"
                android:textSize="@dimen/font16"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/color999"/>

            <LinearLayout
                android:id="@+id/ll_guess"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
