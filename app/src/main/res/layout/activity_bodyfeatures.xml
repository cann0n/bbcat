<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_orange_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="18dp"
            android:src="@drawable/icon_back_w"/>

        <TextView
            android:id="@+id/iv_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@drawable/whiteringbg_sm"
            android:drawableLeft="@drawable/timeicon"
            android:gravity="center"
            android:paddingLeft="@dimen/theme_padding"
            android:paddingRight="@dimen/theme_padding"
            android:singleLine="true"
            android:textColor="@color/default_black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/iv_right"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/whiteringbg_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="提交"
            android:textColor="@color/default_black"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_orange_color"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="身高 cm"
                android:textColor="@color/color_white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/bodyfea_height"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:background="@drawable/whiteringbg_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="40.0"
                android:textColor="@color/default_black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="体重 kg"
                android:textColor="@color/color_white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/bodyfea_weight"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:background="@drawable/whiteringbg_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="03.0"
                android:textColor="@color/default_black"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="头围 cm"
                android:textColor="@color/color_white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/bodyfea_head"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:background="@drawable/whiteringbg_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="33.0"
                android:textColor="@color/default_black"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <RelativeLayout
            android:id="@+id/ruler_heightall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.sdkj.bbcat.widget.VerticalRulerView
                android:id="@+id/ruler_heightrl"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                app:vDirections="right"
                app:vMinValue="20"
                app:vMaxValue="2000"
                app:vCurrentValue="20"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:background="@color/theme_orange_color"/>

            <TextView
                android:id="@+id/ruler_heighttv"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_btn_status"
                android:gravity="center"
                android:singleLine="true"
                android:text="40.0cm"
                android:textColor="@color/color_white"
                android:textSize="26sp"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/ruler_heighttv"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="26dp"
                android:gravity="center"
                android:text="身高"
                android:textColor="@color/default_black"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ruler_weightall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.sdkj.bbcat.widget.HorizontalRulerView
                android:id="@+id/ruler_weightrl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                app:hDirections="top"
                app:hMinValue="0"
                app:hMaxValue="1000"
                app:hCurrentValue="0"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:background="@color/theme_orange_color"/>

            <TextView
                android:id="@+id/ruler_weighttv"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:background="@drawable/bg_btn_status"
                android:gravity="center"
                android:singleLine="true"
                android:text="03.0kg"
                android:textColor="@color/color_white"
                android:textSize="26sp"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="体重"
                android:textColor="@color/default_black"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ruler_headall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.sdkj.bbcat.widget.HorizontalRulerView
                android:id="@+id/ruler_headrl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                app:hDirections="bottom"
                app:hMinValue="0"
                app:hMaxValue="600"
                app:hCurrentValue="0"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="115dp"
                android:background="@color/theme_orange_color"/>

            <TextView
                android:id="@+id/ruler_headtv"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="85dp"
                android:background="@drawable/bg_btn_status"
                android:gravity="center"
                android:singleLine="true"
                android:text="33.0cm"
                android:textColor="@color/color_white"
                android:textSize="26sp"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="68dp"
                android:gravity="center"
                android:text="头围"
                android:textColor="@color/default_black"
                android:textSize="16sp"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
