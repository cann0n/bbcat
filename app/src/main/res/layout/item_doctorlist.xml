<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.android.volley.ui.NetworkImageView
            android:id="@+id/iv_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="@dimen/theme_margin"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="@dimen/textview_middle"
            android:layout_marginRight="5dp"
            android:text="李娜"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_alignTop="@+id/iv_thumb"/>
        <TextView
            android:id="@+id/tv_doctor_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#a8a6a2"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="教授/主任/博士"
            android:layout_marginRight="@dimen/theme_margin"
            android:layout_toRightOf="@+id/tv_doctor_name"
            android:layout_alignBottom="@+id/tv_doctor_name"
            />
        <TextView
            android:id="@+id/tv_doctor_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#a8a6a2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="教授/主任/博士111111111111111111111111111111111111111111111"
            android:layout_below="@+id/tv_doctor_name"
            android:layout_alignLeft="@+id/tv_doctor_name"
            android:paddingTop="7dp"
            android:layout_marginRight="@dimen/theme_margin"
            android:paddingBottom="7dp"
            />
        <LinearLayout
            android:id="@+id/ll_worktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_alignBottom="@+id/iv_thumb">

            <TextView
                android:id="@+id/tv_worktime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_min"
                android:textColor="@color/color333"
                android:layout_marginRight="5dp"
                android:text="坐诊时间:"/>
            <TextView
                android:id="@+id/tv_worktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textview_min"
                android:textColor="@color/color_blue"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/theme_margin"
                android:text="周二/周三"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_divide" />
    </RelativeLayout>
</LinearLayout>