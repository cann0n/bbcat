<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_window"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_orange_color"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/tv_default"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/icon_add_friend"
        android:drawablePadding="10dp"
        android:text="添加好友"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font16"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color999"
        />

    <TextView
        android:id="@+id/tv_rock_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_aroud"
        android:drawablePadding="10dp"
        android:text="附近的人"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font16"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color999"
        />

    <TextView
        android:id="@+id/tv_disco"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_new_group"
        android:drawablePadding="10dp"
        android:text="新建群组"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font16"
        android:gravity="center_vertical"
        />
</LinearLayout>